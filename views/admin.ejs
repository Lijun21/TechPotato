    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-5">Join us now</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">Sign Up</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" action="/register" method="POST">
                                <div class="form-group">
