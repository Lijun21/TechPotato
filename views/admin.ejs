                                <div>
                                    <input class="form-control" type="text" name="adminCode" placeholder="Admin code">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg float-right">Register</button>
                                </div>
                                <div class="form-group">
                                    <a href="/projects">Go Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
