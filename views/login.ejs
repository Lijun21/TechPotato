<% include partials/header %>

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-5">Welcome come back!</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">Sign In</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" action="/login" method="POST">
                                <div class="form-group">
                                    <label for="forUsername">Username</label>
                                    <input class="form-control" type="text" id="forUsername" name="username" placeholder="Kelly Smith">  
                                </div>
                                <div class="form-group">
                                    <label for="forInputPassword">Password</label>
                                    <input class="form-control" type="password" name="password" id="forInputPassword" placeholder="5+ characters">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg float-right">Sign In</button>
                                </div>
                                <div>
                                    <a href="/register">Sign Up</a>
                                    <a href="/forgot" class="ml-2" id="forgot">Forgot your password? </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<% include partials/footer %>