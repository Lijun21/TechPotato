<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Retset Password</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/reset/<%= token %>" method="POST">
                <div class="form-group">
                    <label>New Password</label>
                    <input class="form-control" type="password" name="password" placeholder="new password" autofocus="autofocus">
                </div>
                <div class="form-group">
                    <label>Confirm Passwird</label>
                    <input class="form-control" type="password" name="confirm" placeholder="confirm password">
                    </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Set New Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include partials/footer %>