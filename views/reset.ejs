<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-5">Forgot Password</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">Restset</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" action="/reset/<%= token %>" method="POST">
                                <div class="form-group">
                                    <label for="forNewPS">New Password</label>
                                    <input class="form-control" type="password" name="password" id="forNewPS" placeholder="new password" autofocus="autofocus">
                                </div>
                                <div class="form-group">
                                    <label for="forConfirmPS">Confirm Passwird</label>
                                    <input class="form-control" type="password" name="confirm" id="forConfirmPS" placeholder="confirm password">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg float-right">Set New Password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

